<div class="large-12 medium-12 medium-centered columns">
<% form_url = params[:action] == 'new' ? forum_topics_path : @topic %>
<%= form_for @topic, url: form_url do |form| %>
  <%= render 'layouts/form_errors', object: @topic %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit class: 'small button right' %>
  </div>
<% end %>

</div>