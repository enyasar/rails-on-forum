<%= form_for @user, data: { abide: ''} do |form| %>
    <%= render 'layouts/form_errors', object: @user %>
    <div class="row">
      <div class="large-6 columns">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, required: true, pattern: :alpha %>
        <%= show_error_message %>
      </div>
      <div class="large-6 columns">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, required: true, pattern: :alpha %>
        <%= show_error_message %>
      </div>
      <div class="large-12 columns">
        <%= form.label :username %>
        <%= form.text_field :username, required: true, pattern: :alpha %>
        <%= show_error_message %>
      </div>
      <div class="large-12 columns">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, pattern: :email %>
        <%= show_error_message %>
      </div>
      <% if params[:action] == 'new' || params[:action] == 'create' %>
      <div class="large-6 columns">
        <%= form.label :password %>
        <%= form.password_field :password %>
        <%= show_error_message %>
      </div>
      <div class="large-6 columns">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation %>
        <%= show_error_message %>
      </div>
      <% end %>
      <div class="large-12 columns">
        <%= form.submit class: 'medium button right' %>
      </div>
    </div>
<% end %>